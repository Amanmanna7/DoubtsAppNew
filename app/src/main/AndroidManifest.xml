        android:theme="@style/AppTheme">
        <activity
            android:name=".TeacherDashboard"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".viewImageAnswer" />
        <activity
            android:name=".postImageAnswer"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".viewTextAnswer" />
        <activity android:name=".postTextAnswer" />
        <activity android:name=".selectedQuestionActivity" />
        <activity android:name=".seeRecentActivity" />
